<%- include("./partials/head") %>

    <div class="container">
        <h1>Weather App</h1>

        <!-- <form action="/" class="validated-form" novalidate id="form"> -->
        <div class="mb-3">
            <label for="city" class="form-label">Enter your city</label>
            <input type="text" name="city" class="form-control" id="city" aria-describedby="CityName" required>
        </div>
        <button type="button" class="btn btn-primary" id="btn">Submit</button>
        <!-- </form> -->
        <div class="row mt-3">
            <div class="col-6">
                <div class="card mb-3 hidden" id="card" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4" id="Icon">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title display-5" id="LocalizedName"></h5>
                                <p class=" card-text lead" id="WeatherDescription"></p>
                            </div>
                            <p class="card-text lead" id="Date"><small class="text-muted"></small></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card-body">
                            <ul class="list-group list-group-flush lead" id="WeatherInformation"></ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <!-- Right Widget -->
                <div class="card text-center hidden" id="Right-Widgit">
                    <div class="card-header">
                        Featured
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Weather Conditions</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <div class="flex-container">
                            <div>
                                <img src="/icons/geolocation.gif" class="img-fluid" alt="Icon of geolocation">
                                <p id="geolocation" class="lead"></p>
                            </div>
                            <div>
                                <img src="/icons/weathercock.gif" class="img-fluid" alt="Icon of wind direction">
                                <p id="windDirectionAngle" class="lead"></p>
                            </div>
                            <div>
                                <img src="/icons/wind.gif" class="img-fluid" alt="Icon of wind direction">
                                <p id="windDirectionCompass" class="lead"></p>
                            </div>
                            <div>
                                <img src="/icons/gauge.png" class="img-fluid" alt="Icon of pressure">
                                <p id="Pressure" class="lead"></p>
                            </div>
                            <div>
                                <img src="" alt="">
                                <p></p>
                            </div>
                        </div>
                        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                    </div>
                    <div class="card-footer text-muted">
                        Powered by <a href="https://developer.accuweather.com/" target="_blank">AccuWeather</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="/app.js"></script>
    <%- include("./partials/footer") %>