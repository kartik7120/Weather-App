<%- include("./partials/head") %>

    <div class="container">
        <h1>Weather App</h1>

        <!-- <form action="/" class="validated-form" novalidate id="form"> -->
        <div class="mb-3">
            <label for="city" class="form-label">Enter your city</label>
            <input type="text" name="city" class="form-control" id="city" aria-describedby="CityName" required>
        </div>
        <button type="button" class="btn btn-primary" id="btn">Submit</button>
        <!-- </form> -->
        <div class="row mt-3">
            <div class="col-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4" id="Icon">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title display-5" id="LocalizedName"></h5>
                                <p class=" card-text lead" id="WeatherDescription"></p>
                            </div>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card-body">
                            <ul class="list-group list-group-flush lead" id="WeatherInformation"></ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card hidden" style="width: 20rem;" id="card">
                    <!-- <img src="..." class="card-img-top" alt="..."> -->
                    <div class="card-body">
                        <h5 class="card-title display-5"></h5>
                        <p class="card-text lead"></p>
                    </div>

                    <div class="card-body lead" id="WeatherLinks">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/app.js"></script>
    <%- include("./partials/footer") %>